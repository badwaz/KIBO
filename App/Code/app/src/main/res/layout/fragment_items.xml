<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="130dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="136dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="#00DDDDDD"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageItem"
            android:layout_width="141dp"
            android:layout_height="122dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="5dp"
            app:srcCompat="@drawable/i_destello_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="138dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_number"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="#00E4E4E4"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="ITEM NAME"
                android:textAlignment="viewStart"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#E4E4E4"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="+15 Power"
                android:textAlignment="viewStart"
                android:textColor="#C81616" />

            <TextView
                android:id="@+id/itemDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#E4E4E4"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="This is the description of this awesome element. Maybe i will finish this when Jim Towers gets rich."
                android:textColor="#000000"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>