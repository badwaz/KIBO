<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_2"
    tools:context="com.example.kibo.DashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/badgeRankedBackground"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/bronze_badge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="408dp"
            android:layout_height="75dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.004">

            <Space
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/changeColor"
                android:layout_width="61dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/options_icon" />

            <Space
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/usernameText"
                android:layout_width="216dp"
                android:layout_height="69dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Space
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/logOutButton"
                android:layout_width="84dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@null"
                android:padding="15dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/exit_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="411dp"
            android:layout_height="98dp"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kdaText">

            <ImageButton
                android:id="@+id/rankedButton"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/trophy_icon" />

            <Space
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/matchButton"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/versus_icon" />

            <Space
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/itemButton"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_action_lab" />

            <Space
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/contactButton"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/contact_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kdaText"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/kdaData">

            <TextView
                android:id="@+id/kName"
                android:layout_width="120dp"
                android:layout_height="54dp"
                android:fontFamily="@font/roboto_black"
                android:text="K"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/dName"
                android:layout_width="120dp"
                android:layout_height="54dp"
                android:fontFamily="@font/roboto_black"
                android:text="D"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/aName"
                android:layout_width="120dp"
                android:layout_height="54dp"
                android:fontFamily="@font/roboto_black"
                android:text="A"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="42sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kdaData"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalPoints">

            <TextView
                android:id="@+id/killText"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:fontFamily="@font/roboto"
                android:text="000"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/deathText"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:fontFamily="@font/roboto"
                android:text="000"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/assisText"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:fontFamily="@font/roboto"
                android:text="000"
                android:textAlignment="center"
                android:textColor="#FDFDFD"
                android:textSize="42sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/totalPoints"
            android:layout_width="153dp"
            android:layout_height="54dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="368dp"
            android:layout_marginEnd="171dp"
            android:layout_marginBottom="336dp"
            android:fontFamily="@font/roboto_black"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.703" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>